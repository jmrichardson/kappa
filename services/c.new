# DON'T MODIFY THIS FILE MANUALLY
version: '3.4'
services:
  elasticsearch:
    container_name: elasticsearch
    hostname: elasticsearch
    image: "docker.elastic.co/elasticsearch/elasticsearch:6.4.0"
    network_mode: "host"
    # restart: unless-stopped
    environment:
      - cluster.name=kappa
      - network.host=0.0.0.0
      - discovery.zen.ping.unicast.hosts=node1
      - discovery.zen.minimum_master_nodes=1
      - bootstrap.memory_lock=true
    ulimits:
      memlock:
        soft: -1
        hard: -1
    volumes:
      - elasticsearch:/usr/share/elasticsearch/data
    ports:
      - '9200:9200'
      - '9300:9300'
    extra_hosts:
      - node1:192.168.1.100
  kibana:
    container_name: kibana
    hostname: kibana
    network_mode: "host"
    # restart: unless-stopped
    image: "docker.elastic.co/kibana/kibana:6.4.0"
    environment:
      - ELASTICSEARCH_URL=http://localhost:9200
    ports:
      - '5601:5601'
    depends_on:
      - elasticsearch
  filebeat:
    container_name: filebeat
    hostname: filebeat
    network_mode: "host"
    # restart: unless-stopped
    user: root
    image: "docker.elastic.co/beats/filebeat:6.4.0"
    volumes:
      - ./filebeat/filebeat.yml:/usr/share/filebeat/filebeat.yml
      - ./filebeat/fields.yml:/usr/share/filebeat/fields.yml
      # Temporarily get news logs
      # - /home/kappa/packages/kappa_news/logs/:/var/log/kappa/
      - /home/kappa/kappa/logs/:/var/log/kappa/
      - filebeat:/usr/share/filebeat/data/
    depends_on:
      - elasticsearch
    command: filebeat -e -strict.perms=false
  rabbitmq:
    container_name: rabbitmq
    hostname: rabbitmq1
    network_mode: "host"
    # restart: unless-stopped
    image: rabbitmq:3-management
    ports:
      - '4369:4369'
      - '5672:5672'
      - '15672:15672'
      - '25672:25672'
      - '35672:35672'
    volumes:
      - rabbitmq:/var/lib/rabbitmq
      - ./rabbitmq/rabbitmq.conf:/etc/rabbitmq/rabbitmq.conf
    environment:
      - RABBITMQ_ERLANG_COOKIE=secret
    extra_hosts:
      - "rabbitmq1:192.168.1.100"
      - "rabbitmq2:192.168.1.101"
  flower:
    container_name: flower
    hostname: flower
    network_mode: "host"
    # restart: unless-stopped
    image: "mher/flower:latest"
    environment:
      - CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
    ports:
      - '5555:5555'
  zookeeper:
    container_name: zookeeper
    hostname: zookeeper
    network_mode: "host"
    # restart: unless-stopped
    image: zookeeper:3.5
    ports:
      - "2181:2181"
      - "2888:2888"
      - "3888:3888"
    environment:
      - ZOO_MY_ID=1
    volumes:
      - zookeeper:/data
  kafka:
    container_name: kafka
    hostname: kafka1
    network_mode: "host"
    # restart: unless-stopped
    image: bitnami/kafka
    ports:
      - "9092:9092"
      # - "9999:9999"
    environment:
      - ALLOW_PLAINTEXT_LISTENER=yes
      - KAFKA_BROKER_ID=1
      - KAFKA_ZOOKEEPER_CONNECT=192.168.1.100:2181
      - KAFKA_DELETE_TOPIC_ENABLE=true
      # - JMX_PORT=9999
    volumes:
      - kafka:/bitnami/kafka
    depends_on:
      - zookeeper
    extra_hosts:
      - "kafka1:192.168.1.100"
      - "kafka2:192.168.1.101"
  kafka-manager:
    container_name: kafka-manager
    hostname: kafka-manager
    network_mode: "host"
    # restart: unless-stopped
    image: sheepkiller/kafka-manager
    ports:
      - "9000:9000"
    environment:
      - ZK_HOSTS=192.168.1.100:2181
      - APPLICATION_SECRET=letmein
    depends_on:
      - kafka
    extra_hosts:
      - "kafka1:192.168.1.100"
      - "kafka2:192.168.1.101"
volumes:
  elasticsearch:
    driver: local
  filebeat:
    driver: local
  kafka:
    driver: local
  zookeeper:
    driver: local
  rabbitmq:
    driver: local
