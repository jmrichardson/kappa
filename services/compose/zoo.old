  zookeeper:
    container_name: zookeeper
    hostname: zookeeper
    network_mode: "host"
    image: bitnami/zookeeper:latest
    ports:
      - "2181:2181"
      - "2888:2888"
      - "3888:3888"
    environment:
      - ALLOW_ANONYMOUS_LOGIN=yes
EDIT1 - ZOO_SERVER_ID=1
EDIT2 - ZOO_SERVERS=server.1=0.0.0.0:2888:3888
    volumes:
      - zkdata:/bitnami/zookeeper
